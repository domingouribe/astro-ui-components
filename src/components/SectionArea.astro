---
interface Props {
	title: string;
	description: string;
	aditionalClass: string;
}
const { title, description, aditionalClass } = Astro.props;
---

<section class:list={["Section", ["home"], [{ aditionalClass }]]}>
	<h2 class="Section-title">{title}</h2>
	<p class="Section-description">{description}</p>
	<slot />
</section>
